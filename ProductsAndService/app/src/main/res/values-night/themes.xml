<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProductsAndService" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/black_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">#121212</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="MessageUserItemStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBarChatStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputMessageStyle">
        <item name="android:background">#292929</item>
    </style>

    <style name="CardDataProfileStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AdvertStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayoutStyle">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>
</resources>